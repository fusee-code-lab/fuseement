{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "./types",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules/*", "dist/*"]
}